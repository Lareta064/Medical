mixin menu-list(title, items)
	.large-menu-list
		h3 #{title}
		ul
			each item in items
				li
					a(href="#") #{item.text}
mixin main-banner(title, text, imgSrc, soc)
	.main-banner
		.container
			.main-banner-content.d-flex
				//======TEXT=====
				.main-banner__text
					h1.title-1 !{title}
					if text != ''
						.text-24
							p !{text}
					button.button.button-big--dark(type="button") Записаться на прием
					if soc
						.header-social.d-flex
							p Поделиться с врачом
							.header-social__content
								img(src="./img/"+soc+".png", width="245" alt="alt")
				//======IMAGE=====
				.main-banner__img
					.img-round
						img(src="./img/header/"+ imgSrc +".jpg", width="429" alt="img")
