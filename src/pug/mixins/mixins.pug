mixin checkbox-item(text)
	.checkbox-item
		label
			input(type="checkbox" name="")
			.fake-checkbox
			| #{text}

mixin result-card(btntext, text)
	.swiper-slide.result-card
		.result-card__img
			img(src="./img/result.jpg", width="568" alt="img")
		.result-card__body.d-flex
			.result-card-text
				.title-bold
					p Результаты наших пациентов
				span Срок акции: 31/08/2021 
			.button.button-small--orange #{btntext}
		if text
			.result-card__footer
				p #{text}

